<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.home.HomeFragment">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieImage"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tvMain"
        app:lottie_rawRes="@raw/run_dog_run"/>

    <TextView
        android:id="@+id/tvMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceSubtitle1"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="They are training for you, don't make them wait!!"
        android:layout_margin="8dp"
        app:layout_constraintBottom_toTopOf="@id/btnAdopt"
        app:layout_constraintStart_toStartOf="@id/btnFavorite"
        app:layout_constraintEnd_toEndOf="@id/btnAdopt"/>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnAdopt"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="Lets Adopt a puppie!"
        android:layout_margin="8dp"
        app:cornerRadius="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnFavorite"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="My favorite dogs"
        android:layout_margin="8dp"
        app:cornerRadius="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tvSimpatic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:textAppearance="?attr/textAppearanceSubtitle1"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="He wants to be like this other dog, but with you!!"
        app:layout_constraintTop_toBottomOf="@id/btnFavorite"
        app:layout_constraintStart_toStartOf="@id/btnFavorite"
        app:layout_constraintEnd_toEndOf="@id/btnAdopt"/>

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:lottie_rawRes="@raw/dogito"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:layout_constraintTop_toBottomOf="@id/tvSimpatic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/btnFavorite"
        app:layout_constraintEnd_toEndOf="@id/btnAdopt"/>


</androidx.constraintlayout.widget.ConstraintLayout>